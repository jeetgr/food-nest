{
  "name": "foodnest",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@better-auth/expo": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --fix --type-aware",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:customer": "turbo -F customer dev",
    "dev:admin": "turbo -F admin dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @foodnest/db db:push",
    "db:studio": "turbo -F @foodnest/db db:studio",
    "db:generate": "turbo -F @foodnest/db db:generate",
    "db:migrate": "turbo -F @foodnest/db db:migrate",
    "db:start": "turbo -F @foodnest/db db:start",
    "db:watch": "turbo -F @foodnest/db db:watch",
    "db:stop": "turbo -F @foodnest/db db:stop",
    "db:down": "turbo -F @foodnest/db db:down",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@foodnest/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@foodnest/config": "workspace:*",
    "@types/bun": "catalog:",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
